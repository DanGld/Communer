<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/toolbar_classic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/category_workers_pb"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Results"
        android:textSize="30sp"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/LightGray"
        android:visibility="gone"
        android:fontFamily="sans-serif"
        android:id="@+id/category_no_results"/>

    <include layout="@layout/guide_filters_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_filters"
        android:layout_marginBottom="10dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/category_workers_list">

    </ListView>

</LinearLayout>