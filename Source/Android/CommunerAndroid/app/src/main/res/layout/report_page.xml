<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_classic"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suspicious item"
            android:id="@+id/report_type"
            android:textSize="16sp"
            android:textColor="@color/PrimaryText"
            android:textStyle="bold"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="14sp"
           android:textColor="@color/PrimaryText"
           android:text="Has been reported by Yossi Rozenfeld at wall st. 14 on 12.6.15 14pm"
           android:id="@+id/report_data"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/DividerColor"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize=" 14sp"
            android:textColor="@color/SecondaryText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Someone left a suspicious bag near jewish school"
            android:textSize="14sp"
            android:textColor="@color/PrimaryText"
            android:id="@+id/report_description"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/report_page_police_cntnr">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/DividerColor"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The police have been reported"
                android:textColor="@color/AppOrange"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By Tom Cohen"
                android:textColor="@color/SecondaryText"
                android:id="@+id/report_reported_by"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>