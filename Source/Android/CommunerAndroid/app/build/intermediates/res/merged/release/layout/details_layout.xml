<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:layout_marginTop="7dp"
            android:text="Tell us about yourself so you can get suitable information"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="16sp"
            android:id="@+id/myProfileAboutYou"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:orientation="horizontal"
            android:layout_below="@+id/myProfileAboutYou"
            android:layout_marginTop="7dp"
            android:weightSum="2"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:id="@+id/login_details_EditTextsCntnr">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:imeOptions="actionDone"
                            android:singleLine="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="First Name"
                            android:id="@+id/login_details_firstname"
                            android:inputType="textCapSentences"/>

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <com.rey.material.widget.Spinner
                        android:id="@+id/login_details_gender_spinner"
                        style="@style/Material.Widget.Spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:rd_style="@style/Material.Drawable.Ripple.Wave"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingRight="5dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        app:spn_label="Gender"
                        app:spn_labelTextColor="@color/DividerColor"
                        app:spn_labelEnable="true"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:gravity="bottom">

                    <com.rey.material.widget.Spinner
                        android:id="@+id/login_details_month_spinner"
                        style="@style/Material.Widget.Spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:rd_style="@style/Material.Drawable.Ripple.Wave"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingRight="5dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        app:spn_label="@string/month"
                        app:spn_labelTextColor="@color/DividerColor"
                        app:spn_labelEnable="true" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:imeOptions="actionDone"
                            android:singleLine="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Last Name"
                            android:id="@+id/login_details_lastname"
                            android:inputType="textCapSentences"/>

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <com.rey.material.widget.Spinner
                        android:id="@+id/login_details_marital_spinner"
                        style="@style/Material.Widget.Spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:rd_style="@style/Material.Drawable.Ripple.Wave"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingRight="5dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        app:spn_label="Marital Status"
                        app:spn_labelTextColor="@color/DividerColor"
                        app:spn_labelEnable="true"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:gravity="bottom">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <EditText
                                android:inputType="number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Day"
                                android:id="@+id/login_details_day"
                                />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <EditText
                                android:inputType="number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Year"
                                android:id="@+id/login_details_year"/>

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/login_details_EditTextsCntnr"
            android:layout_marginTop="15dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_details_EditTextsCntnr"
                android:id="@+id/my_profile_email_input"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <EditText
                    android:inputType="textEmailAddress|textCapSentences"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:id="@+id/login_details_email"
                    />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Language"
                android:textSize="12sp"
                android:textColor="@color/SecondaryText"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/language_radiogroup"
                android:orientation="horizontal"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/eng_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:drawableRight="@drawable/ic_flag_english"
                    android:layout_margin="15dp"/>

                <RadioButton
                    android:id="@+id/heb_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_flag_hebrew"
                    android:layout_margin="15dp"/>
            </RadioGroup>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>