<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="10dp"
    card_view:cardElevation="3dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/widget_recent_news"
            android:textSize="16sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:paddingRight="10dp"
            android:layout_weight="3"
            android:id="@+id/announcement_first_item_cntnr"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginRight="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feldenkrais"
                    android:id="@+id/annoucement_first_title"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:ellipsize="end"/>
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Many people feel renewed health and sensory awareness through Feldenkrais"
                    android:id="@+id/annoucement_first_desc"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif"
                    android:textSize="15sp"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:maxEms="17"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:id="@+id/annoucement_first_image"
                    android:src="@drawable/noprofilepic"
                    android:scaleType="fitXY"
                    android:background="@null"/>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/DividerColor"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_weight="3"
            android:paddingRight="10dp"
            android:id="@+id/announcement_second_item_cntnr"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginRight="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mazal Tov To to Our School"
                    android:id="@+id/annoucement_second_title"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This year we gonna have good times and good teachers"
                    android:id="@+id/annoucement_second_desc"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:maxEms="17"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:id="@+id/annoucement_second_image"
                    android:src="@drawable/noprofilepic"
                    android:scaleType="fitXY"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>