<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="@drawable/calendar_events_bg"
        android:id="@+id/day_event_item_container"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="25dp"
            android:paddingTop="5dp">

            <TextView
                android:visibility="gone"
                android:textColor="@color/white"
                android:text="parasha"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:layout_gravity="center"
                android:id="@+id/parasha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_below="@+id/parasha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nursey School Meeting"
                android:textSize="16sp"
                android:id="@+id/calendar_event_title"
                android:fontFamily="sans-serif"
                android:layout_gravity="center"
                android:textColor="@color/white"
                />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/magen_david"
                android:layout_below="@+id/calendar_event_title"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:id="@+id/magen_david_img"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="25dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09:00"
                    android:textSize="16sp"
                    android:id="@+id/calendar_event_time"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/white"
                    android:layout_gravity="right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Schelton st' 75, Manchester"
                    android:textSize="15sp"
                    android:id="@+id/calendar_event_location"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>